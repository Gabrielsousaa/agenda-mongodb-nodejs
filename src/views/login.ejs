<%- include('includes/head.ejs') %>
    <%- include('includes/navbar.ejs') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-5">

                    <h1 class="text-center">Criar conta ou fazer Login</h1>
                    <p class="text-center lead">Faça o login ou crie uma conta abaixo: </p>
                    <%- include('includes/messages'); %>
                        <div class="row">
                            <div class="col-lg">
                                <h4>Faça o seu cadastro</h4>
                                <h6>
                                    <p>Caso não tenha uma conta crie uma abaixo:</p>
                                </h6>

                                <form class='form-cadastro' action="/login/register" method="POST">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <div class="form-group">
                                        <label>Seu Email </label>
                                        <input type="email" class="form-control" name="email" aria-describedby="emailHelp" />
                                    </div>
                                    <div class="form-group">
                                        <label>Senha </label>
                                        <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" />
                                        <small id="passwordHelp" class="form-text text-muted">Nunca compartilhe a sua senha.</small>
                                    </div>

                                    <button type="submit" class="btn btn-primary">Criar minha conta</button>
                                </form>
                            </div>
                            <div class="col-lg">
                                <h4>Faça se login</h4>
                                <h6>
                                    <p>Se você tem uma conta, faça o login abaixo: </p>
                                </h6>

                                <form class='form-login' action="/login/login" method="POST">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <div class="form-group">
                                        <label>Seu Email </label>
                                        <input type="email" class="form-control" name="email" aria-describedby="emailHelp" />
                                    </div>
                                    <div class="form-group">
                                        <label>Senha </label>
                                        <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" />
                                        <small id="passwordHelp" class="form-text text-muted">Nunca compartilhe a sua senha.</small>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Entrar</button>
                                </form>

                            </div>
                        </div>
                </div>
                <div class="col-lg-2"></div>
            </div>
            <%- include('includes/footer.ejs') %>