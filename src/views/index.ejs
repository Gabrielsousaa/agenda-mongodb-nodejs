<%- include('includes/head.ejs') %>
    <%- include('includes/navbar.ejs') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-5">

                    <h1 class="text-center">Agenda</h1>
                    <p class="text-center lead">Seus contatos estáo abaixo</p>
                    <% if(contatos.length > 0) { %>
                        <%- include('includes/messages') %>
                            <div class="responsive-table">
                                <table class="table my-3">
                                    <% contatos.forEach(contatos =>{ %>
                                        <tr>


                                            <td>
                                                <%= contatos.nome %>
                                            </td>
                                            <td>
                                                <%= contatos.sobrenome %>
                                            </td>
                                            <td>
                                                <%= contatos.telefone %>
                                            </td>
                                            <td>
                                                <%= contatos.email %>
                                                    <td>
                                                        <a class="btn btn-warning" href="/contato/index/<%= contatos._id %> ">Editar</a>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-danger" href="/contato/delete/<%= contatos._id %> ">deletar</a>
                                                    </td>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </table>
                            </div>
                            <% }else{ %>
                                <p class="text-center lead text-danger">Não existem contatos na sua agenda</p>
                                <% } %>
                </div>

                <div class="col-lg-2"></div>
            </div>
            <%- include('includes/footer.ejs') %>